/**index.wxss**/
.header{height: 80vw;overflow: hidden;}
/*搜索框*/
.search{background: #fff;margin: 3vw 3vw;padding:0 20rpx;display: flex;height: 60rpx;border-radius: 10rpx;}
.search>input{width: 90%;height: 60rpx;}
.icon-search{color: #bbb;line-height: 60rpx;margin-right: 6rpx;}
.placeholder{font-size: 26rpx;color: #bbb}



.main{padding: 3vw;}

.title-wrapper{width: 100%;display: flex;justify-content: space-between;align-items: center;padding: 20rpx 0;}
.title-wrapper>.title{font-size: 40rpx;}
.title-wrapper>.more{color: #aaa}

.item-wrapper{width:100%;display:flex;justify-content: space-between;flex-wrap: wrap;margin-bottom: 20rpx; }
.item-wrapper>.item{width: 25%;display: flex;flex-direction: column;align-items: center;justify-content: center}
.item>.icon-wrapper{width: 14vw;height: 14vw;display: flex;justify-content: center;align-items: center;}
.item>.icon-wrapper>image{width: 80%;display: block;}
.item>.sort{text-align: center;margin-top: 6rpx;color: #333}


.banner{margin-top: 40rpx;background: #eee;border-radius: 4vw;overflow: hidden}
.banner>image{width: 100%;vertical-align: bottom}

.doc-list{margin-top: 30rpx;}
